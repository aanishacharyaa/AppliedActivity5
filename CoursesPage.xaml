<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppliedActivity5.CoursesPage"
             Title="CoursesPage">
    <StackLayout>
        <Button Text="Add Course" Clicked="AddCourseButton_Clicked" />
        <Picker x:Name="AvailableCoursesPicker"
                Title="Select a Course"
                ItemDisplayBinding="{Binding Title}"
                ItemsSource="{Binding AvailableCourses}" />
        <ListView x:Name="CoursesListView" ItemsSource="{Binding Courses}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Title}" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" />

                            <Button Text="Delete" Clicked="HandleDeleteButtonClicked" CommandParameter="{Binding .}" />

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>